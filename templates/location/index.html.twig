{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>City</th>
            <th>Country</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.country }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    {# link Pokaż – tylko z rolą ROLE_LOCATION_SHOW #}
                    {% if is_granted('ROLE_LOCATION_SHOW') %}
                        <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                    {% endif %}

                    {# link Edytuj – tylko z rolą ROLE_LOCATION_EDIT #}
                    {% if is_granted('ROLE_LOCATION_EDIT') %}
                        <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                    {% endif %}

                    {# usuń – tylko z rolą ROLE_LOCATION_DELETE #}
                    {% if is_granted('ROLE_LOCATION_DELETE') %}
                        {{ include('location/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# przycisk tworzenia nowej lokalizacji – tylko z rolą ROLE_LOCATION_NEW #}
    {% if is_granted('ROLE_LOCATION_NEW') %}
        <a class="btn btn-primary" href="{{ path('app_location_new') }}">Create new</a>
    {% endif %}
{% endblock %}
