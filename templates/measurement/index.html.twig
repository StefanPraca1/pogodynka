{% extends 'base.html.twig' %}

{% block title %}Measurement index{% endblock %}

{% block body %}
    <main class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Measurement index</h1>

            {# przycisk New – tylko z rolą ROLE_MEASUREMENT_NEW #}
            {% if is_granted('ROLE_MEASUREMENT_NEW') %}
                <a class="btn btn-primary" href="{{ path('app_measurement_new') }}">New</a>
            {% endif %}
        </div>

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>°C</th>
                    <th style="width:160px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for m in measurements %}
                    <tr>
                        <td>{{ m.id }}</td>
                        <td>{{ m.location ? m.location.city ~ ', ' ~ m.location.country : '-' }}</td>
                        <td>{{ m.date ? m.date|date('d.m.Y') : '' }}</td>
                        <td>{{ m.celsius }}</td>
                        <td class="text-nowrap">

                            {# show – tylko z rolą ROLE_MEASUREMENT_SHOW #}
                            {% if is_granted('ROLE_MEASUREMENT_SHOW') %}
                                <a class="btn btn-sm btn-outline-secondary"
                                   href="{{ path('app_measurement_show', {'id': m.id}) }}">show</a>
                            {% endif %}

                            {# edit – tylko z rolą ROLE_MEASUREMENT_EDIT #}
                            {% if is_granted('ROLE_MEASUREMENT_EDIT') %}
                                <a class="btn btn-sm btn-outline-primary"
                                   href="{{ path('app_measurement_edit', {'id': m.id}) }}">edit</a>
                            {% endif %}

                            {# delete – tylko z rolą ROLE_MEASUREMENT_DELETE #}
                            {% if is_granted('ROLE_MEASUREMENT_DELETE') %}
                                {{ include('measurement/_delete_form.html.twig', { measurement: m }) }}
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a class="btn btn-link px-0" href="{{ path('app_location_index') }}">← back to Locations</a>
    </main>
{% endblock %}
